{
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@constant/*": ["constants/*"],
      "@model/*": ["models/*"],
      "@service/*": ["services/*"],
      "@command/*": ["commands/*"],
      "@util/*": ["utils/*"],
      "@type/*": ["types/*"]
    },
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}